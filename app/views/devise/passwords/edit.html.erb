<h2><%= t('devise.password.change.your') %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: t('devise.password.new'), required: true, autofocus: true, hint: ("#{@minimum_password_length} #{t('devise.password.min_char')}" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "#{t('devise.password.confirm')}", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "#{t('devise.password.change.my')}" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
