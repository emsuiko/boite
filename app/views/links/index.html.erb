<p id="notice"><%= notice %></p>

<h1>Listing Links</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <% if user_signed_in? %>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.name %></td>
        <td><%= link_to link.url, link.url %></td>
        <% if user_signed_in? %>
          <td><%= link_to content_tag(:span, '', :class => 'glyphicon glyphicon-search'), link %></td>
          <td><%= link_to content_tag(:span, '', :class => 'glyphicon glyphicon-pencil'), edit_link_path(link) %></td>
          <td><%= link_to content_tag(:span, '', :class => 'glyphicon glyphicon-remove'), link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Link', new_link_path %>
<% end %>
